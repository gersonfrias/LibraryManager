extends layout.pug

block content
  h2 Delete Book
  h2.error Are you sure you want to delete this title?
  form(action="/books/delete/" + book.id method="post")
    p
      label(for='title') Title
      input(
        type='text'
        name='title'
        value= book.title
        )
    p
      label(for='author') Author
      input(
        type='text'
        name='author'
        value= book.author
        )
    p
      label(for='genre') Genre
      input(
        type='text'
        name='genre'
        value= book.genre
        )
    p
      label(for='year') Year
      input(
        type='text'
        name='year'
        value= book.year
        )
    p
      a(class='button' href='/books') No! Take Me Back.
    p
      input(
        type='submit'
        value='Delete Book'
        )
