extends layout.pug

block content
  h2 Delete Book
  h2.error Are you sure you want to delete this title?
  form(action="/books/" + book.id + "/delete" method="post")
    include form
    p
      a(aria-label='no! take me back' class='button' href='/books') No! Take Me Back.
    p
      input(
        type='submit'
        value='Delete Book'
        aria-label='delete book'
        )
