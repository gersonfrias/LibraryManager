extends layout.pug

block content
  h2 Edit / Update Book

  include error

  form(action="/books/" + book.id  method="post")
    include form
    p
      input(
        type='submit'
        value='Update Book'
        )
  form
    p
      a(aria-label='cancel' class='button' href='/books/?page=1') Cancel
    p
      a(aria-label='delete' class='button' href='/books/' + book.id + '/delete') Delete
