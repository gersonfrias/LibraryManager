extends layout.pug

block content
  h2 Edit / Update Book
  h2 The Title has been Added!
  form(action="/books/" + book.id  method="post")
    p
      label(for='title') Title
      input(
        type='text'
        name='title'
        value= book.title
        )
    p
      label(for='author') Author
      input(
        type='text'
        name='author'
        value= book.author
        )
    p
      label(for='genre') Genre
      input(
        type='text'
        name='genre'
        value= book.genre
        )
    p
      label(for='year') Year
      input(
        type='text'
        name='year'
        value= book.year
        )
    p
      input(
        type='submit'
        value='Update Book'
        )
  form
    p
      a(class='button' href='/books') Return to Home
    p
      a(class='button' href='/books/delete/' + book.id) Delete
