extends layout.pug

block content
  h2 Edit / Update Book
  h2.confirm The Title has been Added!
  form(action="/books/" + book.id  method="post")
    include form
    p
      input(
        type='submit'
        value='Update Book'
        )
  form
    p
      a(aria-label='return home' class='button' href='/books') Return to Home
    p
      a(aria-label='delete' class='button' href='/books/' + book.id + '/delete') Delete
